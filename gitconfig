rvt = checkout --
view = !tig
switch = checkout
lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
graph = log --graph --pretty=format:'%h %ad | %s%d [%an]' --date=short

[push]
default = matching

[merge]
tool = vimdiff

